
<div class='container-fluid'>
  <div class='row'>
    <div class='col-sm-12 col-md-12'>
      <% if @dapils.present? %>
      <h3 class='lead'>Daftar Daerah Pilihan&nbsp;&nbsp;<%= link_to 'Buat Dapil', new_dapil_path, class:'btn btn-default' %></h3>

      <table class='table table-hover table-striped'>
        <thead>
          <tr>
            <th>Nama</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @dapils.each do |dapil| %>
            <tr>
              <td><%= dapil.name.upcase %></td>
              <td><%= link_to 'Edit', edit_dapil_path(dapil), class:'btn btn-warning' %>&nbsp;&nbsp;<%= link_to 'Hapus', dapil, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger' %></td>
              <td></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>
      <% else %>
      <h3 class='lead'>Maaf Data Yang Anda Cari Belum Ada ..&nbsp;&nbsp;<%= link_to 'Buat Dapil', new_dapil_path, class:'btn btn-default' %></h3>
      <% end %>
    </div>
  </div>
</div>
