<div class='container-fluid'>
  <div class='row'>
    <div class='col-sm-12 col-md-12'>
      <% if @fractions.present? %>
      <h3 class='lead'>Daftar Fraksi&nbsp;&nbsp;<% if current_user %><%= link_to 'Buat Fraksi', new_fraction_path, class:'btn btn-default' %><% end %></h3>

      <table class='table table-hover table-striped'>
        <thead>
          <tr>
            <th>Fraksi</th>
            <th colspan="1"></th>
          </tr>
        </thead>

        <tbody>
          <% @fractions.each do |f| %>
            <tr>
              <td><%= link_to f.name.titleize, f %></td>
              <td><%= link_to 'Edit', edit_fraction_path(f), class:'btn btn-warning' %>&nbsp;&nbsp;<%= link_to 'Destroy', f, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>
      <% else %>
      <h3 class='lead'>Maaf Data Yang Anda Cari Belum Ada ..&nbsp;&nbsp;<% if current_user %><%= link_to 'Buat Fraksi', new_fraction_path, class:'btn btn-default' %><% end %></h3>
      <% end %>
    </div>
  </div>
</div>
