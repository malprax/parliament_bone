<div class="container">
  <div class="row">
    <h3 class="lead">Pangkat Organisasi</h3>

    <table class="table table-hover table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @levels.each do |level| %>
          <tr>
            <td><%= level.name.titleize rescue nil %></td>
            <td><%= link_to 'Edit', edit_level_path(level) %></td>
            <td><%= link_to 'Destroy', level, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <br>
    <%= link_to 'Buat Pangkat', new_level_path, class: "btn btn-success" %>
  </div>
</div>
