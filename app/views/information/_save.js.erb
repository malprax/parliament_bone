$("ul.errors").html("")
<% if @information.errors.any? %>
  <% @information.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message %>"))
  <% end %>
<% else %>
  $(".information_index").html("<%= escape_javascript(render 'index').html_safe %>")
  $("#information_modal").modal('hide')
<% end %>
