<div class="container">
  <div class="row">
    <% @information.each do |info| %>
    <article>
      <h3 class="lead"><%= info.title %></h3>
      <p>Publikasi <%= info.created_at.strftime("%d-%m-%Y") %></p>
      <p><%= raw(info.content) %></p>
      <br>
      <br>
    </article>

    <% end %>
    <%= link_to 'Buat Berita', new_information_path, class: "btn btn-success" %>
  </br>
  </div>
</div>
