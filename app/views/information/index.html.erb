<div class="container">
  <div class = "row">
    <div class="col-sm-12 col-md-8 col-lg-8">
      <%= link_to 'Buat Berita', new_information_path, class: "btn btn-success" %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-8 col-md-8 col-lg-8">
      <section>
        <% @information.each do |info| %>
        <article>
          <h3 class="lead"><%= link_to info.title, info %></h3>
          <p>Publikasi <%= info.created_at.strftime("%d-%m-%Y") %></p>
          <p><%= truncate(info.content, length: 250, escape: false).html_safe %><%= link_to "Selengkapnya", info %></p>
          <br>
          <br>
        </article>
        <% end %>
      </section>
    </div>
    <div class="col-sm-4 col-md-4 col-lg-4">
      <section>
        <article>
          <h3 class="lead">Index Berita</h3>
          <% @information_sort_date.each do |date, title| %>
          <p>
            <%= date.strftime("%d-%m-%Y") %>
            <% title.each do |t| %>
            <%= truncate(t.title, length: 30, escape: true) %>
            <%= link_to "...", t %>
            <% end %>
          </p>
          <% end %>
        </article>
      </section>
    </div>
  </br>
  </div>
</div>
