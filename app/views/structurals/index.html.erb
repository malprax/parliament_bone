<div class="container-fluid">
  <div class="row">
      <div class="col-sm-12 col-md-12">
        <% if @structurals.present? %>
        <h3 class="lead">Daftar Nama Jabatan&nbsp;&nbsp;<%= link_to 'Buat Jabatan', new_structural_path, class: 'btn btn-default' %></h3>

        <table class="table table-hover table-striped">
          <thead>
            <tr>
              <th>Jabatan</th>
              <th colspan="2"></th>
            </tr>
          </thead>

          <tbody>
            <% @structurals.each do |structural| %>
              <tr>
                <td><%= structural.name.titlecase %></td>
                <td><%= link_to 'Edit', edit_structural_path(structural) %></td>
                <td><%= link_to 'Hapus', structural, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <br>
      <% else %>
        <h3 class="lead">Maaf Data Yang Anda Cari Belum Ada ..&nbsp;&nbsp;<%= link_to 'Buat Jabatan', new_structural_path, class: 'btn btn-default' %> </h3>
      <% end %>

      </div>
  </div>
</div>
